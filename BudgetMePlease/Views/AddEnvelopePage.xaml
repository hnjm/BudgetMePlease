<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetMePlease.Views.AddEnvelopePage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Envelope Name.." Text="{Binding Path=Envelope.Name}"></Entry>
            <Entry Placeholder="Monthly Budget.." Text="{Binding Path=Envelope.MonthlyBudget}"></Entry>
            <Button Text="Save Envelope" Command="{Binding SaveEnvelopeCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>